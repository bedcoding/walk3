<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:id="@+id/loggedInWeightSetting"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/setting_button_border"
            android:drawableLeft="@drawable/weightsetting"
            android:text="몸무게 설정"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:textSize="15dp" />

        <Button
            android:id="@+id/BlueTooth"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/setting_button_border"
            android:drawableLeft="@drawable/bluetoothsetting"
            android:text="블루투스 연결"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:textSize="15dp" />

        <Button
            android:id="@+id/SMS_setting"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/setting_button_border"
            android:drawableLeft="@drawable/smsetting"
            android:text="보호자 전화번호 설정"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:textSize="15dp" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>