<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/first_grad"
    tools:context="com.example.ggavi.registeration.phu1.NormalMode">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--Button to start/stop tracking-->
        <Button
            android:id="@+id/trackL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_button4"
            android:drawableLeft="@drawable/walking_man"
            android:text="START  "
            android:textColor="#77547a"
            android:textSize="20dp" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:stretchColumns="*"
            app:layout_constraintTop_toTopOf="parent">

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_two"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="pedometer"
                    android:textColor="#000000"
                    android:textSize="13dp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/stepsL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_two"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="0"
                    android:textColor="#77547a"
                    android:textSize="13dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_two"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="distance(km)"
                    android:textColor="#000000"
                    android:textSize="13dp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/distanceL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_two"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="0.000"
                    android:textColor="#77547a"
                    android:textSize="13dp"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_two"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="calories"
                    android:textColor="#000000"
                    android:textSize="13dp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/calL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_two"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="0.00"
                    android:textColor="#77547a"
                    android:textSize="13dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_two"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="time"
                    android:textColor="#000000"
                    android:textSize="13dp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/timeL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_two"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="00:00:000"
                    android:textColor="#77547a"
                    android:textSize="13dp"
                    android:textStyle="bold" />
            </TableRow>


        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/heartPicL"
                android:layout_width="50dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/heart2" />

            <TextView
                android:id="@+id/heartrateL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:text="111"
                android:textColor="#77547a"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/achievementLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone"
            tools:ignore="InvalidId">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="목표 달성률: "
                android:textColor="#77547a"
                android:textSize="13dp"
                android:textStyle="bold" />

            <ProgressBar
                android:id="@+id/achievementProgressBar"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="3dp"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/custom_progress" />

            <TextView
                android:id="@+id/achievementPercentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorWarning"
                android:padding="2dp"
                android:text="0"
                android:textColor="#ffffff"
                android:textSize="13dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="%"
                android:textColor="#ffffff"
                android:background="@color/colorWarning"
                android:textSize="13dp"
                android:textStyle="bold" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#d100a9" />

        <fragment
            android:id="@+id/mapL"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_weight="2"
            android:background="@drawable/border_bottom"
            android:clickable="true"
            android:enabled="true" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#d100a9" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
